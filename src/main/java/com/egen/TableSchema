Table Customer {
  id integer [pk, not null, increment]
  email varchar [unique]
  first_name varchar
  last_name varchar
}



Table Item {
  id integer [pk, not null, increment]
  name varchar
  price integer
}



Table Address {
  id integer [pk, not null, increment]
  customer_id integer [ref: > Customer.id]
  address_line1 varchar
  address_line2 varchar
  city varchar
  state varchar
  zip varchar
}

Table Order {
  id integer [pk, not null, increment]
  shipping_id integer [ref: > Address.id]
  billing_id integer [ref: > Address.id]
  customer_id integer [ref: > Customer.id]
  created_date datetime
  modified_date datetime
  status Status
  subtotal integer
  tax integer
  shipping_charges integer
  total integer
}

Table OrderItem {
  id integer [pk, not null, increment]
  order_id integer [ref: > Order.id]
  item_id integer [ref: > Item.id]
  item_qty integer
}

Table Payment {
  id integer [pk, not null, increment]
  order_id integer [ref: > Order.id]
  created_date datetime
  amount integer
  payment_method Method
}


Enum Status {
completed
  pending
  canceled
  shipped
}

Enum Method {
   Cash
   Credit
   Debit
   Crypto
}





